{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "cycle_commit_payload.v0.1.schema.json",
    "title": "CycleCommitPayload",
    "description": "Canonical payload signed by the active sovereign at end of cycle. Frozen per X-3 Q&A AN1.",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "const": "CycleCommit"
        },
        "cycle_id": {
            "type": "integer",
            "minimum": 1
        },
        "kernel_version_id": {
            "type": "string"
        },
        "state_hash_end": {
            "type": "string",
            "pattern": "^[0-9a-f]{64}$"
        },
        "state_hash_prev": {
            "type": "string",
            "pattern": "^[0-9a-f]{64}$"
        },
        "constitution_hash_tip": {
            "type": "string",
            "pattern": "^[0-9a-f]{64}$"
        },
        "pending_successor_key": {
            "oneOf": [
                {
                    "type": "string",
                    "pattern": "^ed25519:[0-9a-fA-F]{64}$"
                },
                {
                    "type": "null"
                }
            ]
        },
        "identity_chain_length": {
            "type": "integer",
            "minimum": 1
        },
        "identity_chain_tip_hash": {
            "type": "string",
            "pattern": "^[0-9a-f]{64}$"
        },
        "overlay_hash": {
            "type": "string",
            "pattern": "^[0-9a-f]{64}$"
        }
    },
    "required": [
        "type",
        "cycle_id",
        "kernel_version_id",
        "state_hash_end",
        "state_hash_prev",
        "constitution_hash_tip",
        "pending_successor_key",
        "identity_chain_length",
        "identity_chain_tip_hash",
        "overlay_hash"
    ],
    "additionalProperties": false
}
