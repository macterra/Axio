{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://axio.local/schema/action_intent.json",
    "title": "ActionIntent",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "action",
        "args"
    ],
    "properties": {
        "action": {
            "type": "string",
            "enum": [
                "MOVE_N",
                "MOVE_S",
                "MOVE_E",
                "MOVE_W",
                "WAIT",
                "HARVEST",
                "SPEND",
                "SELF_MOD",
                "DELEGATE",
                "DISABLE_GATE",
                "MODIFY_POLICY",
                "ISSUE_TOKEN_WITHOUT_VERIFICATION",
                "EXECUTE_RAW"
            ],
            "description": "Action to perform"
        },
        "args": {
            "type": "object",
            "additionalProperties": true,
            "description": "Action-specific arguments"
        }
    }
}
