{
    "$id": "SIR-1/scope_namespaces/v0.1",
    "description": "Legitimate and adversarial scope namespaces for SIR-1 v0.1 (extended from SIR-0 v0.4)",
    "extends": "SIR-0/scope_namespaces/v0.4",
    "legitimate_namespaces": [
        {
            "prefix": "SCOPE/ENV/MAZE_CONSTRAINTS",
            "description": "Legitimate maze action constraints",
            "usage": "Inherited from SIR-0",
            "inherited": true
        },
        {
            "prefix": "SCOPE/EPISODE/HALT",
            "description": "Legitimate halt/refusal signaling",
            "usage": "Inherited from SIR-0",
            "inherited": true
        },
        {
            "prefix": "SCOPE/LOGGING/NOOP",
            "description": "Legitimate no-op for saturation testing",
            "usage": "Inherited from SIR-0",
            "inherited": true
        },
        {
            "prefix": "SCOPE/ENV/SHORTCUT_UNLOCK",
            "description": "Authority to unlock OPEN_SHORTCUT gated action",
            "usage": "SIR-1: Conditions A, C, D (intermittent)",
            "inherited": false,
            "new_in_sir1": true
        },
        {
            "prefix": "SCOPE/ENV/CAPABILITY_GRANT",
            "description": "Authority to grant arbitrary capabilities",
            "usage": "SIR-1: Capability mutation testing",
            "inherited": false,
            "new_in_sir1": true
        }
    ],
    "adversarial_namespaces": [
        {
            "prefix": "SCOPE/ADV_B/",
            "description": "Adversarial claims (all conditions)",
            "usage": "Conditions B, C, D"
        }
    ],
    "disjointness_invariant": "SCOPE/ADV_B/* must have no prefix overlap with any legitimate scope",
    "validation_rule": "A scope is legitimate iff it starts with one of the legitimate_namespaces prefixes. A scope is adversarial iff it starts with SCOPE/ADV_B/."
}
