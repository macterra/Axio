{
    "$id": "SIR-0/scope_namespaces/v0.4",
    "description": "Legitimate and adversarial scope namespaces for SIR-0 v0.4",
    "legitimate_namespaces": [
        {
            "prefix": "SCOPE/ENV/MAZE_CONSTRAINTS",
            "description": "Legitimate maze action constraints",
            "usage": "Condition A, Condition C"
        },
        {
            "prefix": "SCOPE/EPISODE/HALT",
            "description": "Legitimate halt/refusal signaling",
            "usage": "Condition A"
        },
        {
            "prefix": "SCOPE/LOGGING/NOOP",
            "description": "Legitimate no-op for saturation testing",
            "usage": "Condition C"
        }
    ],
    "adversarial_namespaces": [
        {
            "prefix": "SCOPE/ADV_B/",
            "description": "Adversarial claims (Condition B only)",
            "usage": "Condition B"
        }
    ],
    "disjointness_invariant": "SCOPE/ADV_B/* must have no prefix overlap with any legitimate scope",
    "validation_rule": "A scope is legitimate iff it starts with one of the legitimate_namespaces prefixes. A scope is adversarial iff it starts with SCOPE/ADV_B/."
}
