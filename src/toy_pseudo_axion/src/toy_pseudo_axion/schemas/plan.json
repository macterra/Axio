{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://axio.local/schema/plan.json",
    "title": "Plan",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "steps"
    ],
    "properties": {
        "steps": {
            "type": "array",
            "minItems": 1,
            "maxItems": 64,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "op",
                    "args"
                ],
                "properties": {
                    "op": {
                        "type": "string",
                        "enum": [
                            "move",
                            "wait",
                            "pickup",
                            "drop",
                            "signal",
                            "use_tool",
                            "noop"
                        ]
                    },
                    "args": {
                        "type": "object",
                        "additionalProperties": true
                    }
                }
            }
        }
    }
}
