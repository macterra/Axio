{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://axio.local/schema/capability_scope.json",
    "title": "CapabilityScope",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "allowed_ops",
        "rate_limit",
        "expiry_ms"
    ],
    "properties": {
        "allowed_ops": {
            "type": "array",
            "minItems": 1,
            "maxItems": 16,
            "items": {
                "type": "string",
                "minLength": 1,
                "maxLength": 80
            }
        },
        "rate_limit": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "max_calls",
                "per_ms"
            ],
            "properties": {
                "max_calls": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 1000
                },
                "per_ms": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 86400000
                }
            }
        },
        "expiry_ms": {
            "type": "integer",
            "minimum": 1,
            "maximum": 864000000
        }
    }
}
