{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://axio.local/schema/toy_tool.json",
    "title": "ToyTool",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "id",
        "kind",
        "charges"
    ],
    "properties": {
        "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 80
        },
        "kind": {
            "type": "string",
            "minLength": 1,
            "maxLength": 80
        },
        "charges": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100000
        }
    }
}
