{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://axio.local/schema/trace_node.json",
    "title": "TraceNode",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "id",
        "kind",
        "summary",
        "payload"
    ],
    "properties": {
        "id": {
            "type": "integer",
            "minimum": 0,
            "maximum": 1000000
        },
        "kind": {
            "type": "string",
            "enum": [
                "assumption",
                "inference",
                "simulation",
                "evaluation",
                "observation"
            ]
        },
        "summary": {
            "type": "string",
            "minLength": 1,
            "maxLength": 2000
        },
        "payload": {
            "type": "object",
            "additionalProperties": true
        }
    }
}
