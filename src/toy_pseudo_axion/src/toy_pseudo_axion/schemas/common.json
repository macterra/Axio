{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://axio.local/schema/common.json",
    "title": "Common types",
    "type": "object",
    "$defs": {
        "sha256hex": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
        },
        "hmachex": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
        },
        "uuid": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
        },
        "timestamp_ms": {
            "type": "integer",
            "minimum": 0
        },
        "float01": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
        },
        "smallfloat": {
            "type": "number",
            "minimum": -1000000000,
            "maximum": 1000000000
        }
    }
}
