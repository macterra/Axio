{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://axio.local/schema/toy_hazard.json",
    "title": "ToyHazard",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "id",
        "kind",
        "x",
        "y",
        "severity"
    ],
    "properties": {
        "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 80
        },
        "kind": {
            "type": "string",
            "minLength": 1,
            "maxLength": 80
        },
        "x": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255
        },
        "y": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255
        },
        "severity": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100
        }
    }
}
